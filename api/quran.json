      {
        "text": "قُلْ أَعُوذُ بِرَ‌بِّ النَّاسِ",
        "translation": "بگو: «پناه مى‌برم به پروردگار مردم،"
      },
      {
        "text": "مَلِكِ النَّاسِ",
        "translation": "پادشاه مردم،"
      },
      {
        "text": "إِلَـٰهِ النَّاسِ",
        "translation": "معبود مردم،"
      },
      {
        "text": "مِن شَرِّ‌ الْوَسْوَاسِ الْخَنَّاسِ",
        "translation": "از شرّ وسوسه‌گر نهانى؛"
      },
      {
        "text": "الَّذِي يُوَسْوِسُ فِي صُدُورِ‌ النَّاسِ",
        "translation": "آن كس كه در سينه‌هاى مردم وسوسه مى‌كند،"
      },
      {
        "text": "مِنَ الْجِنَّةِ وَالنَّاسِ",
        "translation": "چه از جنّ و [چه از] انس."
      }
    ]
  },
